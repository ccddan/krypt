{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@project/config": [
        "./src/config/index.ts"
      ],
      "@project/config/*": [
        "./src/config/*"
      ],
      "@project/tests/*": [
        "./tests/*"
      ]
    }
  },
  "include": [
    "./src/**/*",
    "./tests/**/*"
  ]
}